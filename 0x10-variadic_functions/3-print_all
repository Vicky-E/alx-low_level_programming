#include <stdarg.h>
#include <stdlib.h>
#include "variadic_functions.h"
/**
 * printall - prints for all specifiers
 * @format: character string
 */
void print_all(const char * const format, ...)
{
	char ch, *str;
	float dec;
	int num;
	int num, i = 0;
    float dec;
    va_list args;

    va_start(args, format);
    while (*format != '\0')
    {
        if (*format = '%')
        {
            switch (*format + 1)
            {
                *format++;
                case 'c':

                    ch = va_arg(args, int);
                    printf ("%c", ch);
                    break;
                case 's':
                    str = va_arg(args, char *);
                    if (str == NULL)
                        str = "(nil)";
                    while (*str)
                    {
                        printf("%s", *str);
                    }
                    break;
                case 'i':
                    num = va_arg(args, int);
                    printf("%i", num);
                    break;
                case 'f':
                    dec = va_arg(args, float);
                    printf("%f", dec);
                    break;
                default:
                    return;
            }
             *format++;
            }
            printf("\n");
        }
    }
}
